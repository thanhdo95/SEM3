@model MyASP.NETMVCDbFirst.Models.Student

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_ViewStart.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.LastName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EnrollDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EnrollDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

    </dl>
    <table>
        <tr>
            <th>Course Title</th>
            <th>Grade</th>
            <th>Credits</th>

        </tr>

        @foreach (var item in Model.Student_Course)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Course.CourseTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GRADE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course.Credits)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.LastName)
        </td>


    </tr>
            
        }


    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
